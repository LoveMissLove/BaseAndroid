<?xml version="1.0" encoding="utf-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">  
    <!--点击背景-->  
    <item android:state_pressed="true"
        >
        <shape>  
             <!--色值-->  
            <solid android:color="#90D1D3DB" />
            <!-- 边缘线条颜色 -->
		<stroke
				android:width="0.5dp"
				android:color="#00000000" />
            <!--圆角-->
            <corners
                android:radius="@dimen/dp_25"
                />
        </shape>
    </item>  
    <!--默认背景-->  
    <item>  
        <shape>  
            <solid android:color="#0062D3" />
            <!-- 边缘线条颜色 -->
		<stroke
				android:width="0.5dp"
				android:color="#00000000" />
            <corners
                android:radius="@dimen/dp_25"
                />
        </shape>
    </item>  
</selector>  